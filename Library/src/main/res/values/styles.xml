<resources>

    <style name="CircleBinderSectionHeadTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/circlebinder_app_head_background</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/circlebinder_head_section_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/circlebinder_head_section_padding_vertical</item>
        <item name="android:paddingRight">@dimen/circlebinder_head_section_padding_horizontal</item>
        <item name="android:paddingBottom">@dimen/circlebinder_head_section_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/circlebinder_head_section_padding_horizontal</item>
    </style>

    <style name="CircleBinderCircleCutView">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="CircleBinderCircleListItemCircleName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CircleBinderCardContainer">
        <item name="android:background">@color/circlebinder_app_card_container_background</item>
    </style>

    <style name="CircleBinderCardList">
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:fastScrollAlwaysVisible">true</item>
        <item name="android:textFilterEnabled">true</item>
        <item name="android:divider">@color/circlebinder_app_card_container_background</item>
        <item name="android:dividerHeight">2dp</item>
        <item name="android:background">@color/circlebinder_app_card_item_background</item>
        <item name="android:clipToPadding">true</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:listSelector">@drawable/abc_list_selector_holo_light</item>
    </style>

    <style name="CircleBinderCardItem">
    </style>

</resources>
