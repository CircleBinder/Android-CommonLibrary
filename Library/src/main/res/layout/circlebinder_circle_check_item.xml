<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/circlebinder_app_spacer_small"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/circlebinder_circle_memo_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/circlebinder_app_spacer_small"
        android:text="100 x 2"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/circlebinder_circle_memo_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="アイテム〜"
        android:textSize="18sp"
        />

</LinearLayout>