<?xml version="1.0" encoding="utf-8"?>
<!-- チェックリスト -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Spinner
            android:id="@+id/fragment_checklist_selector"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            />

        <CheckBox
            android:id="@+id/fragment_checklist_filter"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/circlebinder_app_spacer_small"
            android:layout_centerVertical="true"
            android:text="@string/circlebinder_app_circle_search_filter_by_checked"
            />

    </RelativeLayout>

    <View style="@style/CircleBinderContentBorder" />

    <ListView
        android:id="@+id/fragment_checklist_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="0dp"
        android:divider="@android:color/transparent"
        android:fastScrollEnabled="true"
        android:fadingEdge="none"
        android:clipToPadding="true"
        />

    <include
        layout="@layout/circlebinder_fragment_checklist_empty"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        />

</LinearLayout>