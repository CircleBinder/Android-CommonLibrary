<?xml version="1.0" encoding="utf-8"?>
<!-- サークル詳細 -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include
        layout="@layout/circlebinder_circle_detail"
        android:id="@+id/fragment_circle_detail"
        android:layout_height="120dp"
        android:layout_width="match_parent"
        />

    <Space
        android:id="@+id/fragment_circle_detail_border"
        android:layout_below="@+id/fragment_circle_detail"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        />

    <LinearLayout
        android:layout_below="@+id/fragment_circle_detail_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="がんばります！！！！"
            />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:overScrollMode="never"
            >

            <LinearLayout
                android:id="@+id/fragment_circle_detail_icon_group"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            </HorizontalScrollView>

    </LinearLayout>


</RelativeLayout>