<?xml version="1.0" encoding="utf-8"?>
<!-- お気に入りサークルのアクティビティ -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/favorite_activity_item_checklist_color"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        />

    <net.ichigotake.circlebinder.common.view.CircleCutView
        style="@style/CircleBinderCircleCutView"
        android:id="@+id/circle_cut"
        android:layout_toRightOf="@+id/favorite_activity_item_checklist_color"
        android:layout_alignParentTop="true"
        />

    <TextView
        style="@style/CircleBinderCircleListItemCircleName"
        android:id="@+id/circle"
        android:layout_toRightOf="@+id/circle_cut"
        android:layout_toLeftOf="@+id/date"
        android:text="NECOTOXIXIN"
        />

    <TextView
        android:id="@+id/activity"
        android:layout_toRightOf="@+id/circle_cut"
        android:layout_toLeftOf="@+id/date"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="・最新の画像動画"
        />

    <TextView
        android:id="@+id/date"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2014/02/21 14:33"
        />

</RelativeLayout>
