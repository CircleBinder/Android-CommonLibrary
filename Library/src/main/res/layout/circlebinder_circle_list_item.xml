<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    >

    <TextView
        android:id="@+id/checklist_item_space"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textSize="18sp"
        android:background="#aaaaaa"
        android:padding="4dp"
        android:text="あ\n01a"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:clickable="true"
        />

    <RelativeLayout
        android:layout_toRightOf="@+id/checklist_item_space"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <circlebinder.common.view.CircleCutView
            style="@style/CircleBinderCircleCutView"
            android:id="@+id/checklist_item_circle_cut"
            android:layout_centerVertical="true"
            />

        <RelativeLayout
            android:layout_toRightOf="@+id/checklist_item_circle_cut"
            android:layout_toLeftOf="@+id/circlebinder_checklist_item_links"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            >

            <!-- TODO: OSでフォントサイズを大きくした場合の考慮 -->

            <TextView
                android:id="@+id/checklist_item_genre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:textSize="12sp"
                android:text="創作"
                android:visibility="gone"
                />

            <TextView
                style="@style/CircleBinderCircleListItemCircleName"
                android:id="@+id/checklist_item_circle_name"
                android:text="NECOTOXIXIN"
                android:layout_alignParentTop="true"
                android:layout_below="@+id/checklist_item_genre"
                android:lineSpacingMultiplier="1.2"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/checklist_item_pen_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checklist_item_circle_name"
                android:lineSpacingMultiplier="1.2"
                android:text="・最新の画像動画"
                android:textSize="12sp"
                />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
